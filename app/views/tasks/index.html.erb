<div class="min-h-screen bg-gray-50">
  <div class="max-w-6xl mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">My Tasks</h1>
        <p class="text-gray-500 mt-1"><%= Time.current.strftime('%A, %d %B') %></p>
      </div>
      <%= link_to new_task_path, 
          class: "bg-blue-100 text-blue-600 px-4 py-2 rounded-lg flex items-center",
          data: { turbo_frame: "task_modal" } do %>
        <span class="text-xl mr-2">+</span> New Task
      <% end %>
    </div>

    <div id="tabs">
      <%= render TabsComponent.new %>
    </div>

    <%= render "task_list", tasks: @tasks %>
  </div>
</div>

<%= turbo_frame_tag "task_modal" %>
