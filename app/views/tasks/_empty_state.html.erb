<div class="text-center py-12">
  <div class="max-w-sm mx-auto">
    <%= image_tag "empty_state.png", class: "w-full h-auto mb-8" %>

    <h3 class="text-2xl font-semibold text-gray-900 mb-2">
      No tasks left
    </h3>

    <p class="text-gray-500 mb-8">
      You've done a great job
    </p>

    <%= link_to new_task_path,
        class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-500 transition-colors",
        data: { turbo_frame: "task_modal" } do %>
      <span class="text-xl mr-2">+</span> Add a task
    <% end %>
  </div>
</div>

