<div class="min-h-screen bg-gray-50">
  <div class="max-w-6xl mx-auto px-4 py-8">
    <!-- Title Section -->
    <div class="flex justify-between items-center mb-6">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Today's Task</h1>
        <p class="text-gray-500 mt-1"><%= Time.current.strftime('%A, %d %B') %></p>
      </div>
      <button class="bg-blue-100 text-blue-600 px-4 py-2 rounded-lg flex items-center">
        <span class="text-xl mr-2">+</span> New Task
      </button>
    </div>

    <!-- Task Filters -->
    <div class="flex space-x-6 mb-8 border-b pb-4">
      <button class="flex items-center text-blue-600">
        All <span class="ml-2 bg-blue-600 text-white rounded-full px-2 py-0.5 text-sm">35</span>
      </button>
      <button class="flex items-center text-gray-500">
        Open <span class="ml-2 bg-gray-200 text-gray-600 rounded-full px-2 py-0.5 text-sm">14</span>
      </button>
      <button class="flex items-center text-gray-500">
        Closed <span class="ml-2 bg-gray-200 text-gray-600 rounded-full px-2 py-0.5 text-sm">19</span>
      </button>
      <button class="flex items-center text-gray-500">
        Archived <span class="ml-2 bg-gray-200 text-gray-600 rounded-full px-2 py-0.5 text-sm">2</span>
      </button>
    </div>

    <!-- Task List -->
    <div class="space-y-4">
      <!-- Task Item -->
      <div class="bg-white rounded-xl p-6 shadow-sm">
        <div class="flex justify-between items-start">
          <div>
            <h3 class="text-xl font-semibold text-gray-900 line-through">Client Review & Feedback</h3>
            <p class="text-gray-500 mt-1">Crypto Wallet Redesign</p>
            <div class="mt-4 text-gray-500">
              Today 10:00 PM - 11:45 PM
            </div>
          </div>
          <div class="bg-blue-600 p-2 rounded-full">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
          </div>
        </div>
      </div>

      <!-- Another Task Item (Not Completed) -->
      <div class="bg-white rounded-xl p-6 shadow-sm">
        <div class="flex justify-between items-start">
          <div>
            <h3 class="text-xl font-semibold text-gray-900">Review with Client</h3>
            <p class="text-gray-500 mt-1">Product Team</p>
            <div class="mt-4 text-gray-500">
              Today 01:00 PM - 03:00 PM
            </div>
          </div>
          <div class="border-2 border-gray-200 p-2 rounded-full">
            <div class="w-5 h-5"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>